<Window x:Class="Test1.ProductWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Test1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductWindow" Height="450" Width="800">

    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая часть — изображение -->
                <Border Grid.Column="0" Background="#E5E7EB" CornerRadius="8">
                    <TextBlock Text="📷" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#9CA3AF"/>
                </Border>

                <!-- Правая часть — информация о товаре -->
                <StackPanel Grid.Column="1" Margin="16,0,0,0">

            <!-- Название товара -->
            <TextBlock x:Name="ProductNameText" Text="Название Товара" FontSize="16" FontWeight="SemiBold" Foreground="#1F2937"/>

            <!-- Цена -->
            <TextBlock x:Name="PriceText" Text="цена" FontSize="28" FontWeight="Bold" Foreground="#111827"/>

            <!-- Количество -->
            <TextBlock Text="Количество" FontSize="14" Foreground="#6B7280" Margin="0,8,0,4"/>
            <ComboBox x:Name="QuantityComboBox" FontSize="14" SelectedIndex="0" MinWidth="120">
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
            </ComboBox>

            <!-- Кнопка "Добавить в корзину" -->
            <Button x:Name="AddToCartButton" Content="Добавить в корзину"
                    Background="#1F2937" Foreground="White"
                    FontSize="16" FontWeight="SemiBold"
                    Padding="16,12" Cursor="Hand"
                    Margin="0,8,0,0"
                    Click="AddToCartButton_Click"/>

            <!-- Блок "Подробнее" -->
            <Expander Header="Подробнее" FontSize="14" FontWeight="SemiBold" Foreground="#1F2937" Margin="0,16,0,0">
                <TextBlock x:Name="DescriptionText" Text="описание товара" FontSize="14" Foreground="#6B7280" TextWrapping="Wrap" Margin="12"/>
            </Expander>

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>

