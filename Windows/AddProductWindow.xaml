<Window x:Class="Test1.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить товар" Height="520" Width="480" WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Новый товар" FontSize="22" FontWeight="Bold" Margin="20,20,20,12"/>

        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <StackPanel.Resources>
                    <Style TargetType="FrameworkElement">
                        <Setter Property="Margin" Value="0,0,0,10"/>
                    </Style>
                </StackPanel.Resources>
                <TextBlock Text="Название" FontWeight="SemiBold"/>
                <TextBox x:Name="NameTextBox" Padding="10" FontSize="14" />

                <TextBlock Text="Описание" FontWeight="SemiBold"/>
                <TextBox x:Name="DescriptionTextBox" Padding="10" FontSize="14" TextWrapping="Wrap" AcceptsReturn="True" Height="90"/>

                <TextBlock Text="Цена (₽)" FontWeight="SemiBold"/>
                <TextBox x:Name="PriceTextBox" Padding="10" FontSize="14" />


                <TextBlock Text="Рейтинг (0-5, опционально)" FontWeight="SemiBold"/>
                <TextBox x:Name="RatingTextBox" Padding="10" FontSize="14" />

                <TextBlock Text="Ссылка на изображение (опционально)" FontWeight="SemiBold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ImageUrlTextBox" Padding="10" FontSize="14" IsReadOnly="True" Background="#F3F4F6"/>
                    <Button Grid.Column="1" Content="Выбрать..." Padding="10" Margin="10,0,0,0" Click="SelectImageButton_Click"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="Отмена" Padding="14,10" Background="#E5E7EB" Foreground="#1F2937" Click="CancelButton_Click"/>
            <Button Content="Сохранить" Padding="14,10" Background="#10B981" Foreground="White" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

