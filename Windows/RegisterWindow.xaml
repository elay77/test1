<Window x:Class="Test1.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="24">
            <StackPanel>
                <TextBlock Text="Регистрация" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#1F2937" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,32"/>
                
                <TextBlock Text="Имя пользователя:" 
                           FontSize="14" 
                           Foreground="#6B7280" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                         FontSize="14" 
                         Padding="12,8" 
                         Margin="0,0,0,16"
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"/>
                
                <TextBlock Text="Email:" 
                           FontSize="14" 
                           Foreground="#6B7280" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="EmailTextBox" 
                         FontSize="14" 
                         Padding="12,8" 
                         Margin="0,0,0,16"
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"/>
                
                <TextBlock Text="Пароль:" 
                           FontSize="14" 
                           Foreground="#6B7280" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                             FontSize="14" 
                             Padding="12,8" 
                             Margin="0,0,0,16"
                             BorderBrush="#D1D5DB" 
                             BorderThickness="1"/>
                
                <TextBlock Text="Подтверждение пароля:" 
                           FontSize="14" 
                           Foreground="#6B7280" 
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             FontSize="14" 
                             Padding="12,8" 
                             Margin="0,0,0,16"
                             BorderBrush="#D1D5DB" 
                             BorderThickness="1"/>
                
                <TextBlock Text="Телефон (необязательно):" 
                           FontSize="14" 
                           Foreground="#6B7280" 
                           Margin="0,0,0,8"/>
                <TextBox x:Name="PhoneTextBox" 
                         FontSize="14" 
                         Padding="12,8" 
                         Margin="0,0,0,24"
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"/>
                
                <Button Content="Зарегистрироваться" 
                        Background="#10B981" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Padding="16,12" 
                        Cursor="Hand"
                        Margin="0,0,0,12"
                        Click="RegisterButton_Click"/>
                
                <Button Content="На главную" 
                        Background="#6B7280" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Padding="16,12" 
                        Cursor="Hand"
                        Click="BackToMainButton_Click"/>
                
                <TextBlock x:Name="ErrorMessage" 
                           Foreground="Red" 
                           FontSize="12" 
                           Margin="0,16,0,0" 
                           TextWrapping="Wrap"
                           Visibility="Collapsed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

