<Window x:Class="Test1.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сброс пароля" Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="White" Margin="24">
        <StackPanel>
            <TextBlock Text="Сброс пароля" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="#1F2937" 
                       HorizontalAlignment="Left" 
                       Margin="0,0,0,24"/>
            
            <TextBlock Text="Введите имя пользователя или email для сброса пароля:" 
                       FontSize="14" 
                       Foreground="#6B7280" 
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>
            
            <TextBlock Text="Имя пользователя или Email:" 
                       FontSize="14" 
                       Foreground="#6B7280" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameOrEmailTextBox" 
                     FontSize="14" 
                     Padding="12,8" 
                     Margin="0,0,0,16"
                     BorderBrush="#D1D5DB" 
                     BorderThickness="1"
                     MaxLength="100"/>
            
            <TextBlock Text="Новый пароль:" 
                       FontSize="14" 
                       Foreground="#6B7280" 
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="NewPasswordBox" 
                         FontSize="14" 
                         Padding="12,8" 
                         Margin="0,0,0,8"
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"
                         MaxLength="50"/>
            
            <TextBlock Text="Подтвердите новый пароль:" 
                       FontSize="14" 
                       Foreground="#6B7280" 
                       Margin="0,0,0,8"/>
            <PasswordBox x:Name="ConfirmPasswordBox" 
                         FontSize="14" 
                         Padding="12,8" 
                         Margin="0,0,0,24"
                         BorderBrush="#D1D5DB" 
                         BorderThickness="1"
                         MaxLength="50"/>
            
            <TextBlock x:Name="ErrorMessage" 
                       Foreground="Red" 
                       FontSize="12" 
                       Margin="0,0,0,16" 
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
            
            <TextBlock x:Name="SuccessMessage" 
                       Foreground="Green" 
                       FontSize="12" 
                       Margin="0,0,0,16" 
                       TextWrapping="Wrap"
                       Visibility="Collapsed"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                        Background="#6B7280" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Padding="16,12" 
                        Cursor="Hand"
                        Margin="0,0,12,0"
                        Click="CancelButton_Click"/>
                
                <Button Content="Сбросить пароль" 
                        Background="#3B82F6" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="SemiBold" 
                        Padding="16,12" 
                        Cursor="Hand"
                        Click="ResetPasswordButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>

